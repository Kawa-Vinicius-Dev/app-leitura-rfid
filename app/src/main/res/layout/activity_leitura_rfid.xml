<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".LeituraActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="36dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:contentDescription="Voltar"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="CONFERÊNCIA"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/pageTitle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#20FFFFFF"
                android:paddingVertical="3dp"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/tvLojaSelecionada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loja Principal"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#20FFFFFF"
                android:paddingVertical="3dp"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:id="@+id/tvSetorSelecionado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almoxarifado"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-26dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIDOS: "
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#90A4AE" />

                <TextView
                    android:id="@+id/tvContadorItens"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="0 / 0"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#1565C0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/tvMsgLeitura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF8E1"
                android:gravity="center"
                android:paddingVertical="6dp"
                android:paddingHorizontal="8dp"
                android:text="Aperte o gatilho"
                android:textColor="#8A5A00"
                android:textSize="11sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/filter_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/status_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="6dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFiltroTodas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/abc_btn_default_mtrl_shape"
                android:backgroundTint="#E3F2FD"
                android:text="Todos"
                android:textAllCaps="false"
                android:textColor="#1565C0"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeMaxTextSize="11sp"
                android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFiltroVerde"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/abc_btn_default_mtrl_shape"
                android:backgroundTint="#E8F5E9"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeMaxTextSize="11sp"
                android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFiltroAmarelo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/abc_btn_default_mtrl_shape"
                android:backgroundTint="#FFF8E1"
                android:text="Divergentes"
                android:textAllCaps="false"
                android:textColor="#F9A825"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeMaxTextSize="11sp"
                android:maxLines="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFiltroVermelho"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="34dp"
                android:background="@drawable/abc_btn_default_mtrl_shape"
                android:backgroundTint="#FFEBEE"
                android:text="Não encontrado"
                android:textAllCaps="false"
                android:textColor="#C62828"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeMaxTextSize="11sp"
                android:maxLines="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaItensLidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="12dp"
        android:paddingBottom="2dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/controls_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_card" />

    <LinearLayout
        android:id="@+id/controls_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="20dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:text="Potência"
                android:textColor="#455A64"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <SeekBar
                android:id="@+id/sbPotencia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="18dp"
                android:max="33"
                android:progress="20"
                android:layout_marginHorizontal="6dp"
                android:progressTint="#1565C0"
                android:thumbTint="#1565C0" />

            <TextView
                android:id="@+id/tvPotencia"
                android:text="20"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnFinalizar"
            style="@style/BotaoFuturista"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Finalizar e Exportar"
            android:textSize="13sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:iconGravity="textStart"
            app:iconPadding="6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>